module Task1.Loans where


template LoanRequest with
    bank : Party
    borrower : Party
    amount : Decimal -- not required for task 1, just for completeness
  where
    signatory borrower
    observer bank
    ensure amount > 0.0

    choice ApproveRequest : ContractId Loan
      controller bank
        do create Loan with ..

template Loan with
    bank : Party
    borrower : Party
    amount : Decimal
  where
    signatory bank, borrower
    ensure amount > 0.0
